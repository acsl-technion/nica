#GDB="gdb --args"

LIBVMA=/home/haggai/src/libvma/src/vma/.libs/libvma.so

for i in $(seq 0 $(($1-1))); do
#	taskset -c $i \
#		VMA_TRACELEVEL=debug \
    all=$(($1 > 5))
    core=$(( $all ? ($i) : ($i + 1) )) 
    echo running $((1982+$i)) on $core
sudo \
	taskset -c $core \
	$GDB env \
		LD_PRELOAD=$LIBVMA \
		VMA_MTU=200 \
		VMA_RX_POLL=200000 \
		VMA_RX_POLL_INIT=200000 \
		VMA_RX_UDP_POLL_OS_RATIO=0 \
		VMA_RX_BUFS=30000 \
		VMA_THREAD_MODE=0 \
	./server $((1982+$i)) &
done

wait
